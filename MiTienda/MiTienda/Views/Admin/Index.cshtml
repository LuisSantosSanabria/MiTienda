@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Panel Administrativo";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">👋 Bienvenido al Panel Administrativo</h2>
    <p class="text-center text-muted">Desde aquí puedes gestionar categorías, productos y pedidos.</p>

    <div class="row mt-4">
        <div class="col-md-4">
            <a href="/Categoria" class="text-decoration-none">
                <div class="card text-center shadow-sm border-0">
                    <div class="card-body">
                        <i class="fa-solid fa-tags fa-3x text-primary mb-3"></i>
                        <h5>Categorías</h5>
                        <p class="text-muted">Gestionar las categorías de productos</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a href="/Producto" class="text-decoration-none">
                <div class="card text-center shadow-sm border-0">
                    <div class="card-body">
                        <i class="fa-solid fa-box fa-3x text-success mb-3"></i>
                        <h5>Productos</h5>
                        <p class="text-muted">Agregar o editar productos</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a href="/Admin/HistorialPedidos" class="text-decoration-none">
                <div class="card text-center shadow-sm border-0">
                    <div class="card-body">
                        <i class="fa-solid fa-cart-shopping fa-3x text-warning mb-3"></i>
                        <h5>Pedidos</h5>
                        <p class="text-muted">Ver el historial de pedidos</p>
                    </div>
                </div>
            </a>

        </div>
    </div>
</div>

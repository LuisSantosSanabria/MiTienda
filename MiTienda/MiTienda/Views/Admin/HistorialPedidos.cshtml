@model List<PedidoVM>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Historial de Pedidos";
}

<div class="row justify-content-between mt-4">
    <div class="col-4">
        <h4>Historial de Pedidos</h4>
    </div>

    <div class="col-4 text-end">
        <a href="/Admin/GenerarPDF"
           class="btn btn-danger px-3 py-1 btn-sm">
            <i class="fa-solid fa-file-pdf me-1"></i> Descargar PDF
        </a>
    </div>
</div>

<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Fecha del Pedido</th>
            <th>Artículos</th>
            <th>Total</th>
            <th>Usuario</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model)
        {
            <tr>
                <td>@pedido.PedidoDatos</td>

                <td>
                    <ol class="list-group list-group-numbered">
                        @foreach (var art in pedido.Articulos)
                        {
                            <li class="list-group-item">
                                @(art.NombreProducto + " — " + art.Cantidad + " x " + art.Precio)
                            </li>
                        }
                    </ol>
                </td>

                <td>@pedido.TotalPedido</td>
                <td>@pedido.UsuarioEmail</td>
            </tr>
        }
    </tbody>
</table>

<div class="row mt-3">
    <div class="col-12 text-end">
        <a href="/Admin/Index"
           class="btn btn-secondary px-3 btn-sm">
            <i class="fa-solid fa-arrow-left me-1"></i> Volver al Panel de Administrador
        </a>
    </div>
</div>

@model List<CarritoVm>

@if(Model.Count() != 0)
{
    <div class="row justify-content-between mt-4">
        <div class="col-4">
            <h4>Prodcutos del Carrito</h4>
        </div>
        <div class="col-4 text-end">
            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Terminar Compra
            </button>
        </div>
    </div>
    <hr />

    <table class="table table-striped">
        <thead>
            <tr>
                <th style="width:120px"></th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Total</th>
                <th style="width:120px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="align-middle">
                    <td style="width:120px">
                        <img class="card-img-top rounded" src="~/images/@item.ImgNombre" alt="Imagen del Producot"
                        loading="lazy" style="width:100px" />
                    </td>
                    <td>@item.Nombre</td>
                    <td>@item.Precio.ToString("C2")</td>
                    <td>@item.Cantidad</td>
                    <td>@((item.Precio * item.Cantidad).ToString("C2"))</td>

                    <td style="width:120px">
                        <a href="/Home/removeCarrito?productId=@item.ProductoId" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash-can"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
        <div class="alert alert-warning" role="alert">
            No hay Productos en el Carrito
        </div>
}


<!-- pago -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <form action="/Home/Pagar" method="post">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Forma de Pago</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <div class="row g-3">
                        <div class="col-12">
                            <input type="email" class="form-control" placeholder="Email" />
                        </div>
                        <div class="col-12">
                            <input type="text" class="form-control" placeholder="Nombre" />
                        </div>
                        <div class="col-6">
                            <input type="email" class="form-control" placeholder="Pais" />
                        </div>
                        <div class="col-6">
                            <input type="email" class="form-control" placeholder="Ciudad" />
                        </div>
                        <hr />
                        <div class="col-12">
                            <input type="text" class="form-control" placeholder="Propietario de la Tarjeta" />
                        </div>
                        <div class="col-12">
                            <input type="email" class="form-control" placeholder="Num de la Tarjeta" />
                        </div>
                        <div class="col-3">
                            <input type="number" class="form-control" placeholder="MM" />
                        </div>
                        <div class="col-3">
                            <input type="number" class="form-control" placeholder="YYYY" />
                        </div>
                        <div class="col-6">
                            <input type="number" class="form-control" placeholder="CVV" />
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Pagar Ahora</button>
                </div>
            </form>

        </div>
    </div>
</div>

<!-- ====== FILTRO ACTIVO ====== -->
@if (!string.IsNullOrEmpty(Model.filterBy))
{
    <div class="row bg-light p-2 mt-2">
        <div class="col-12">
            <strong>Filtrando por:</strong> @Model.filterBy
        </div>
    </div>
}

<!-- ====== LISTADO DE PRODUCTOS ====== -->
<div id="productos" class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4 py-4">
    @foreach (var p in Model.Producto)
    {
        <div class="col">
            <div class="card shadow-sm">
                <img class="card-img-top" src="~/images/@p.ImgNombre" alt="@p.Nombre" />
                <div class="card-body p-4">
                    <div class="text-center">
                        <h5 class="fw-bolder">@p.Nombre</h5>
                        @p.Precio.ToString("C2")
                    </div>
                </div>
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                    <div class="text-center">
                        <a class="btn btn-outline-dark mt-auto" href="/Home/ProductDetalle?id=@p.ProdcutoId" role="button">Ver Detalles</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- ====== SOBRE NOSOTROS ====== -->
    <div class="row bg-light p-5 mt-4" id="Nosotros">
        <div class="col-md-6">
            <img src="~/images/azul2.png" class="img-fluid rounded" alt="Sobre Nosotros" />

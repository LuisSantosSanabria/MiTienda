@model ProductoVM

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <img src="~/images/@Model.ImgNombre" alt="@Model.Nombre" class="img-fluid rounded shadow-sm" />
        </div>

        <div class="col-md-7">
            <h2>@Model.Nombre</h2>
            <h5 class="text-muted">@Model.Categoria.Nombre</h5>
            <hr />

            <p>@Html.Raw(Model.Descripcion)</p>

            <h4 class="text-success mt-3">$@Model.Precio</h4>
            <p class="text-secondary">Stock disponible: @Model.Stock</p>

            <hr />

            @if (User.Identity!.IsAuthenticated)
            {
                <!-- Si el usuario está logueado -->
                <form asp-action="AddICarrito" method="post">
                    <input type="hidden" name="productId" value="@Model.ProdcutoId" />
                    <div class="d-flex align-items-center gap-2">
                        <input type="number" name="quantity" value="1" min="1" max="@Model.Stock" class="form-control w-25" />
                        <button type="submit" class="btn btn-primary">
                            <i class="fa-solid fa-cart-plus me-1"></i> Agregar al carrito
                        </button>
                        <!-- 🔙 Botón Volver -->
                        <a href="javascript:history.back()" class="btn btn-outline-dark">
                            <i class="fa-solid fa-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </form>
            }
            else
            {
                <!-- Si NO está logueado -->
                <div class="alert alert-warning mt-4 d-flex justify-content-between align-items-center">
                    <span><i class="fa-solid fa-lock me-2"></i>Debes iniciar sesión para comprar productos.</span>
                    <div class="d-flex gap-2">
                        <a href="/Registro/Login" class="btn btn-sm btn-outline-dark">
                            Iniciar sesión
                        </a>
                        <!-- 🔙 Botón Volver -->
                        <a href="javascript:history.back()" class="btn btn-sm btn-outline-secondary">
                            <i class="fa-solid fa-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </div>
            }

            @if (ViewBag.message != null)
            {
                <div class="alert alert-success mt-3">
                    @ViewBag.message
                </div>
            }

            @if (TempData["message"] != null)
            {
                <div class="alert alert-success mt-3">
                    @TempData["message"]
                </div>
            }

        </div>
    </div>
</div>



@model List<PedidoVM>

<div class="row justify-content-between mt-4">
    <div class="col-4">
        <h4>Mis Pedidos</h4>
    </div>
</div>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Fecha del Pedido</th>
            <th>Artículos</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PedidoDatos</td>
                <td>
                    <ol class="list-group list-group-numbered">
                        @foreach (var element in item.Articulos)
                        {
                            <li class="list-group-item">
                                @($"{element.NombreProducto} - {element.Cantidad} x {element.Precio}")
                            </li>
                        }
                    </ol>
                </td>

                <td>@item.TotalPedido</td>
            </tr>
        }
    </tbody>
</table>



<div class="col-12 text-end mt-4">
    <a href="/Home/Index" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left me-2"></i> Volver al inicio
    </a>
</div>

